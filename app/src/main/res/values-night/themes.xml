<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flantern" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColorPrimary">@color/body_text_primary</item>
        <item name="android:textColorSecondary">@color/body_text_secondary</item>
        <item name="colorPrimaryContainer">@color/body_background_primary</item>
        <item name="colorSecondaryContainer">@color/content_background_primary</item>
        <item name="colorPrimary">@color/message_background_primary</item>
        <item name="colorSecondary">@color/message_background_secondary</item>
        <item name="android:textColorHighlight">@color/button_focus_primary</item>
        <item name="colorError">@color/label_text_danger</item>
        <item name="color">@color/label_text_admin</item>
        <item name="android:fontFamily">@font/comicneue_regular</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="colorAccent">@color/message_background_secondary</item>
        <item name="android:textColorPrimary">@color/body_text_primary</item>
        <item name="android:background">@color/content_background_primary</item>
    </style>

    <style name="Theme.Flantern.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flantern.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flantern.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>