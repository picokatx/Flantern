    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContextMenuStyle"
        parent="@android:style/TextAppearance.Material.Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>


    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="colorAccent">@color/message_background_secondary</item>
        <item name="android:textColorPrimary">@color/body_text_primary</item>
        <item name="android:background">@color/content_background_primary</item>
    </style>

    <style name="Theme.Flantern.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flantern.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flantern.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
